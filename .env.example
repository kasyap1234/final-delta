# Delta Exchange India Trading Bot - Environment Variables
#
# Copy this file to .env and fill in your actual values.
# DO NOT commit .env to version control!

# =============================================================================
# API CREDENTIALS (Required for live trading)
# =============================================================================

# Your Delta Exchange India API Key
# Get this from: https://www.delta.exchange/user/api-token
DELTA_API_KEY=your_api_key_here

# Your Delta Exchange India API Secret
DELTA_API_SECRET=your_api_secret_here

# =============================================================================
# EXCHANGE MODE
# =============================================================================

# Enable sandbox mode for testing (no real trades)
# Set to "false" for live trading
DELTA_SANDBOX=true

# Use testnet instead of mainnet
DELTA_TESTNET=true

# =============================================================================
# TRADING PARAMETERS
# =============================================================================

# Total account balance for risk calculations
DELTA_ACCOUNT_BALANCE=10000.0

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
DELTA_LOG_LEVEL=INFO

# =============================================================================
# DATABASE AND LOGGING PATHS (Optional)
# =============================================================================

# Custom database path
# DELTA_DB_PATH=data/trading_bot.db

# Custom log file path
# DELTA_LOG_FILE=logs/trading_bot.log

# =============================================================================
# NOTES
# =============================================================================
# 
# 1. Environment variables take precedence over config/config.yaml settings
# 2. API keys should NEVER be committed to version control
# 3. Use sandbox mode for testing your strategy before live trading
# 4. Set DELTA_SANDBOX=false and DELTA_TESTNET=false only when ready for live trading
#
